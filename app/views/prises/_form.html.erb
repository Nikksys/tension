    <%= form.label :pulse %>
    <%= form.number_field :pulse %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note, maxlength: "60" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
